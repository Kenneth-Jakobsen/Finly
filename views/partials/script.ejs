<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
<% if (typeof info !== 'undefined') { %>
  <script>
    const bgColors = {
      errors: '#ef4b53',
      success: '#00b5ff'
    };
    Toastify({
      text: "<%- info.message %>",
      duration: 3000,
      gravity: 'bottom',
      position: 'right',
      offset: { x: 50, y: 10 },
      style: {
        background: bgColors["<%- info.type %>"]
      }
    }).showToast();
  </script>
<% } %>

